{{#each options}}
  {{#if children}}
  <div class=""><strong>{{{name}}}</strong></div>
    {{#each children}}
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="{{term_id}}" id="{{slug_esc}}" name="{{input_name_esc}}[]"{{checked}}>
      <label class="form-check-label" for="{{slug_esc}}">{{{name}}}</label>
      {{#if cost}} &ndash; <span class="value-symbol">$</span><span class="value">{{cost_formatted}}</span>{{/if}}
    </div>
    {{/each}}
  {{else}}
  <div class="form-check">
    <input class="form-check-input" type="checkbox" value="{{term_id}}" id="{{slug_esc}}" name="{{input_name_esc}}[]"{{checked}}>
    <label class="form-check-label" for="{{slug_esc}}">{{{name}}}</label>
    {{#if cost}} &ndash; <span class="value-symbol">$</span><span class="value">{{cost_formatted}}</span>{{/if}}
  </div>
  {{/if}}
{{/each}}
{{#if cost}}
<div class="total">

</div>
{{/if}}